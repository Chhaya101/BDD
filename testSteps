	@When("^I login with valid \"([^\"]*)\" and valid \"([^\"]*)\"$")
	public void i_login_with_valid_and_valid(String Email, String Password)  {
		driver.findElement(By.xpath("//input[@name='email']")).sendKeys(Email);
		driver.findElement(By.xpath("//input[@id='continue']")).click();		
		driver.findElement(By.xpath("//input[@name='password']")).sendKeys(Password);
		driver.findElement(By.xpath("//input[@id='signInSubmit']")).click();
		System.out.println("User enter the correct username and password");
	}

	@Then("^I am able to navigate to the home page$")
	public void i_am_able_to_navigate_to_the_home_page() {
		//assertEquals();
		System.out.println("User enter the correct username and password");
		//driver.close();
	    
	}
	
	@After
	public void tearDown(Scenario scenario) {
		
		final byte[] screenshot = ((TakesScreenshot)driver).getScreenshotAs(OutputType.BYTES);
	      scenario.embed(screenshot, "image/png"); // ... and embed it in the report.
